<div class="row">
    <div class="col-md-12"><br>
        <h2><a href="/course/add" class="btn btn-success float-end">Add New Course</a></h2>
        <div class="table-responsive" style="margin-top:60px">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">Course Code</th>
                        <th scope="col">Course Description</th>
                        <th scope="col">Operation</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each courses}}
                    <tr>
                        <td><a href="/course/{{courseId}}"></a>{{courseCode}}</td>
                        <td><a href="/course/{{courseId}}">{{courseDescription}}</a></td>
                       <td><a href="/course/delete/{{courseId}}" class="btn btn-danger">Delete</a></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    <div class="col-md-12 text-center"><strong>{{message}}</strong></div>
</div>